
<form action="<%=requests_url%>" method="post">
    <label for = "catname"> Cat Name:
        <select id = "catname" name="request[cat_id]">
        <% @cats.each do |cat| %>
            <option value="<%= cat.id %>" > <%= cat.name %></option>
        <% end %>
        </select>
    </label>
    <label for = "start_date"> Start_date: 
        <input type= "date" id="start_date" name="request[start_date]">
    </label>
    <br>
    <label for = "end_date"> End_date: 
        <input type= "date" id="end_date" name="request[end_date]">
    </label>
    <br>
    <input type="submit" value = "submit">
</form>
